{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node"
  },

  "exclude": [
    "node_modules",
    "dist"
  ]
}
